{
  "compilerOptions": {
    "target": "ES6", // Ou a versão do ECMAScript que deseja suportar
    "module": "commonjs",
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src", // Diretório de origem dos arquivos TypeScript
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"], // Caminho para seus arquivos TypeScript
  "exclude": ["node_modules"]
}
